<section class="index container">
  <div class="row">
    <div id="map" class="col-sm-5"></div>
    <div class="non-map col-sm-5">
      <div class="search-area row">
        <input id='search' class="col-xs-9" type="text" autofocus placeholder="농장명을 입력하세요.">
        <div id="btn-search" class="col-xs-3">검색</div>
      </div>
      <div class="result-area row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="row th">
            <div class="local_code col-xs-7">지역(코드)</div>
            <div class="provider col-xs-5">농장명</div>
          </div>
        </div>
        <ul class="col-xs-10 col-xs-offset-1">

        </ul>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
    var providers = [];
    var marked_local = [];

    <% @providers.each do |provider| %>
    providers.push({"local_code": "<%= provider.local_code %>", "provider": "<%= provider.provider %>"});
    <% end %>
</script>
